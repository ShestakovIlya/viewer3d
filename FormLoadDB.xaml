<Window x:Class="viewer3d.FormLoadDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:viewer3d"
        mc:Ignorable="d"
        Title="Выбор ранее сохраненых сцен" Height="341" Width="494" WindowStyle="ToolWindow">
    <Grid>
        <DataGrid ItemsSource="{Binding dbSource}"  x:Name="SceneGrid" 
                  SelectionMode="Single" IsReadOnly="True" ColumnWidth="*" MouseDoubleClick="SceneGrid_MouseDoubleClick" />
    </Grid>
</Window>
